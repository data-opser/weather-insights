<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cityConstraintLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <View
        android:id="@+id/cityLineView"
        style="@style/ListLineView"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        style="@style/Text"
        android:id="@+id/cityTextView"
        android:text="@string/weather_city"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="@id/cityLineView" />

    <TextView
        style="@style/TextSmallGray"
        android:id="@+id/countryTextView"
        android:layout_width="wrap_content"
        android:text="@string/weather_country"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@id/cityTextView"
        android:layout_toEndOf="@+id/cityTextView" />
</RelativeLayout>