<resources>
    <!-- Base application theme. -->
    <style name="Theme.Weatherinsights" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="switchThumbOnColor">@color/switch_thumb_on_night</item>
        <item name="switchThumbOffColor">@color/switch_thumb_off_night</item>
        <item name="switchTrackOnColor">@color/switch_track_on_night</item>
        <item name="switchTrackOffColor">@color/switch_track_off_night</item>

        <item name="navItemIconTintColor">@color/navFloatingTint_night</item>
        <item name="navItemTextColor">@color/navFloatingTint_night</item>
        <item name="navFloatingBgColor">@color/navFloatingBg_night</item>
        <item name="navFloatingTintColor">@color/navFloatingTint_night</item>

        <item name="buttonBgColor">@color/buttonBg_night</item>
        <item name="dialogSettingsBgColor">@color/settingsDialog_night</item>

        <item name="searchBgInertColor">@color/searchBgInert_night</item>
        <item name="searchBgActiveColor">@color/searchBgActive_night</item>
        <item name="searchIconInertColor">@color/searchIconInert_night</item>
        <item name="searchIconActiveColor">@color/searchIconActive_night</item>
        <item name="searchTextInertColor">@color/searchTextInert_night</item>
        <item name="searchTextActiveColor">@color/searchTextActive_night</item>
        <item name="searchTextHintColor">@color/searchTextHint_night</item>

        <item name="dialogSignBgColor">@color/dialogSignBgColor_night</item>
        <item name="dialogBgColor">@color/dialogBg_night</item>
        <item name="dialogHeaderStartColor">@color/dialogHeaderStart_night</item>
        <item name="dialogHeaderCenterColor">@color/dialogHeaderCenter_night</item>
        <item name="dialogHeaderEndColor">@color/dialogHeaderEnd_night</item>
        <item name="dialogWeatherBgColor">@color/dialogWeatherBg_night</item>

        <item name="navBarColor">@color/navBar_night</item>
        <item name="fragmentBgStartColor">@color/fragment_bg_start_night</item>
        <item name="fragmentBgMiddleColor">@color/fragment_bg_middle_night</item>
        <item name="fragmentBgEndColor">@color/fragment_bg_end_night</item>

        <item name="googleBgColor">@color/googleBg_night</item>
        <item name="googleTextColor">@color/googleText_night</item>
        <item name="loginDialogBgColor">@color/loginDialog_night</item>
        <item name="loginButtonTextColor">@color/loginButtonText_night</item>
        <item name="profileBgActiveColor">@color/profileBgActive_night</item>
        <item name="profileBgInertColor">@color/profileBgInert_night</item>
        <item name="profileIconInertColor">@color/profileIconInert_night</item>
        <item name="profileIconActiveColor">@color/profileIconActive_night</item>
        <item name="profileTextInertColor">@color/profileTextInert_night</item>
        <item name="profileTextActiveColor">@color/profileTextActive_night</item>
        <item name="profileTextHintInertColor">@color/profileTextHintInert_night</item>
        <item name="profileTextHintActiveColor">@color/profileTextHintActive_night</item>

        <item name="profileDialogBgColor">@color/profileDialogBg_night</item>
        <item name="birthStrokeColor">@color/birthStroke_night</item>

        <item name="dotsIndicatorSelColor">@color/dotsIndicatorSel_night</item>
        <item name="dotsIndicatorInertColor">@color/dotsIndicatorInert_night</item>
    </style>

    <!-- NIGHT STYLE-->

    <style name="Fragment">
        <item name="android:paddingTop">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/text_night</item>
    </style>

    <style name="TextSmallGray">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_gray_night</item>
    </style>

    <style name="ListItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
    </style>

    <style name="ListLineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/listItemLine_night</item>
    </style>

    <style name="SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/gradient_seekbar</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:maxHeight">3dp</item>
        <item name="android:minHeight">3dp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/button_bgTint_night</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>