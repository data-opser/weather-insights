<resources>
    <!-- Base application theme. -->
    <style name="Theme.Weatherinsights" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">#FF0000</item>

        <item name="gradientStartColor">@color/dark_color_start</item>
        <item name="gradientMiddleColor">@color/dark_color_middle</item>
        <item name="gradientEndColor">@color/dark_color_end</item>
    </style>

    <!-- NIGHT STYLE-->

    <style name="Fragment">
        <item name="android:paddingTop">20dp</item>
        <item name="android:background">@drawable/gradient_bcgrd_night</item>
    </style>

    <style name="Layout">
        <item name="android:background">@color/layout_night</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/background_night</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_onPrimary_night</item>
    </style>

    <style name="TextSmallAndGray">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_onPrimary_gray_night</item>
    </style>

    <style name="SwitchCompat" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="trackTint">@drawable/switch_track_night</item>
        <item name="thumbTint">@drawable/switch_thump_night</item>
    </style>

    <style name="NavigationView">
        <item name="itemIconTint">@color/button_system_night</item>
        <item name="itemTextColor">@color/button_system_night</item>
        <item name="android:background">@color/background_night</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:backgroundTint">#2E4E66</item>
        <item name="tint">@color/button_system_night</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/button_bgTint_night</item>
    </style>
</resources>