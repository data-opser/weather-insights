<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Weatherinsights" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="switchThumbOnColor">@color/switch_thumb_on_day</item>
        <item name="switchThumbOffColor">@color/switch_thumb_off_day</item>
        <item name="switchTrackOnColor">@color/switch_track_on_day</item>
        <item name="switchTrackOffColor">@color/switch_track_off_day</item>

        <item name="navItemIconTintColor">@color/text_day</item>
        <item name="navItemTextColor">@color/text_day</item>
        <item name="dialogSettingsBgColor">@color/settingsDialog_day</item>

        <item name="buttonBgColor">@color/buttonBg_day</item>

        <item name="searchBgActiveColor">@color/searchBgActive_day</item>
        <item name="searchBgInertColor">@color/searchBgInert_day</item>
        <item name="searchIconInertColor">@color/searchIconInert_day</item>
        <item name="searchIconActiveColor">@color/searchIconActive_day</item>
        <item name="searchTextInertColor">@color/searchTextInert_day</item>
        <item name="searchTextActiveColor">@color/searchTextActive_day</item>
        <item name="searchTextHintColor">@color/searchTextHint_day</item>

        <item name="navFloatingBgColor">@color/navFloatingBg_day</item>
        <item name="navFloatingTintColor">@color/navFloatingTint_day</item>
        <item name="navBarColor">@color/navBar_day</item>
        <item name="fragmentBgStartColor">@color/fragment_bg_start_day</item>
        <item name="fragmentBgMiddleColor">@color/fragment_bg_middle_day</item>
        <item name="fragmentBgEndColor">@color/fragment_bg_end_day</item>

        <item name="dialogSignBgColor">@color/dialogSignBgColor_day</item>
        <item name="dialogBgColor">@color/dialogBg_day</item>
        <item name="dialogHeaderStartColor">@color/dialogHeaderStart_day</item>
        <item name="dialogHeaderCenterColor">@color/dialogHeaderCenter_day</item>
        <item name="dialogHeaderEndColor">@color/dialogHeaderEnd_day</item>

        <item name="googleBgColor">@color/googleBg_day</item>
        <item name="googleTextColor">@color/googleText_day</item>
        <item name="loginDialogBgColor">@color/loginDialog_day</item>
        <item name="loginButtonTextColor">@color/loginButtonText_day</item>
        <item name="profileBgActiveColor">@color/profileBgActive_day</item>
        <item name="profileBgInertColor">@color/profileBgInert_day</item>
        <item name="profileIconInertColor">@color/profileIconInert_day</item>
        <item name="profileIconActiveColor">@color/profileIconActive_day</item>
        <item name="profileTextInertColor">@color/profileTextInert_day</item>
        <item name="profileTextActiveColor">@color/profileTextActive_day</item>
        <item name="profileTextHintInertColor">@color/profileTextHintInert_day</item>
        <item name="profileTextHintActiveColor">@color/profileTextHintActive_day</item>

        <item name="profileDialogBgColor">@color/profileDialogBg_day</item>
        <item name="birthStrokeColor">@color/birthStroke_day</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <!-- DAY STYLE-->

    <style name="Fragment">
        <item name="android:paddingTop">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/text_day</item>
    </style>

    <style name="TextSmallGray">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_gray_day</item>
    </style>

    <style name="ListItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
    </style>

    <style name="ListLineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/listItemLine_day</item>
    </style>

    <style name="Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="DailyTempHourlyTime">
        <item name="android:textColor">@color/white</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="DailyTempHourlyIcon">
        <item name="android:tint">@color/white</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="DailyTempHourlyTemp">
        <item name="android:textColor">@color/white</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/gradient_seekbar</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:maxHeight">6dp</item>
        <item name="android:minHeight">6dp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/selected_item_day</item>
    </style>
</resources>