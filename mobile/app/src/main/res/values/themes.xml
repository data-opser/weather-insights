<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Weatherinsights" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">#FF0000</item>

        <item name="gradientStartColor">@color/light_color_start</item>
        <item name="gradientMiddleColor">@color/light_color_middle</item>
        <item name="gradientEndColor">@color/light_color_middle</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>


    <!-- DAY STYLE-->

    <style name="Fragment">
        <item name="android:paddingTop">20dp</item>
        <item name="android:background">@drawable/gradient_bcgrd_day</item>
    </style>

    <style name="Layout">
        <item name="android:background">@color/layout_night</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_onPrimary_day</item>
    </style>

    <style name="TextSmallAndGray">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_onPrimary_gray_day</item>
    </style>

    <style name="SwitchCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="trackTint">@drawable/switch_track_day</item>
        <item name="thumbTint">@drawable/switch_thump_day</item>
    </style>

    <style name="NavigationView">
        <item name="itemIconTint">@color/text_onPrimary_day</item>
        <item name="itemTextColor">@color/text_onPrimary_day</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="FloatingActionButton">
        <item name="tint">@color/primaryVariant</item>
        <item name="android:backgroundTint">@color/nav_button_day</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/selected_item_day</item>
    </style>

</resources>